<header>
  <h1>All Projects</h1>
</header>

<table>

  <thead>
    <tr>
      <td>Project Name</td>
      <td>Total Project Size</td>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |p| %>
      <tr class="project-row" id="<%= dom_id p %>">
        <td class="name"><%= p.name %></td>
        <td class="total-size"><%= p.total_size %></td>
      </tr>
    <% end %>
  </tbody>

</table>
